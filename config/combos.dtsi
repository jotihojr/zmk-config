// use require-prior-idle-ms for combos
#undef COMBO_HOOK
#define COMBO_HOOK require-prior-idle-ms = <150>;

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

// make homerow combos tap-only (so HRMs can be chorded instantaneously)
//#define HRC_TAB    &hml         LA(LCTRL) TAB
//#define HRC_REPEAT &hml_repeat  LS(LCTRL) 0
//#define HRC_LPAR   &hmr_lpar_lt RS(LCTRL) 0
//#define HRC_RPAR   &hmr_rpar_gt LA(LCTRL) 0

/* Horizontal combos - left hand */
ZMK_COMBO(esc,     &kp ESC,   LT3 LM3, DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(mouse,   &smart_mouse,  LT3 LT1,     DEF NAV NUM, COMBO_TERM_FAST)

ZMK_COMBO(globe,   &kp GLOBE, RT4 RM4, DEF NAV NUM, COMBO_TERM_SLOW)


/* Horizontal combos - right hand */
ZMK_COMBO(grk,     &sl UC,    RT1 RT3,     DEF NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(cpgrk,   &sls 0,    RT1 RT2 RT3, DEF NAV NUM, COMBO_TERM_FAST)

/* Vertical combos - left hand */
ZMK_COMBO(lbkt,    &kp LBKT,  LM2 LB2, DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(rbkt,    &kp RBKT,  LM1 LB1, DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(grave_w, &kp GRAVE, LT0 LM0, DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(grave_m, &kp NUBS,  LM0 LB0, DEF NAV NUM, COMBO_TERM_SLOW)

/* Vertical combos - right hand */
ZMK_COMBO(bslh,    &kp BSLH,  RM0 RB0, DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(minus,   &kp MINUS, RM1 RB1, DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(quote,   &kp SQT,   RM2 R2, DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(equal,   &kp EQUAL, RM3 RB3, DEF NAV NUM, COMBO_TERM_SLOW)
